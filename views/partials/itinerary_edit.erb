<form name="delete_itinerary" action="/itinerarys/<%= itinerary.id %>" method="post" accept-charset="utf-8" class = "float_right">
	<input type="hidden" name="_method" value="delete">
	<input type="submit" value="Delete" style="background-color:#c00;color:#fff;">
</form>
